{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [true, "attribute", "app", "camelCase"],
    "component-selector": [true, "element", "app", "kebab-case"],
    "indent": [false, "tabs", 4],
    "quotemark": [false, "double", "jsx-double"],
    "whitespace": [false],
    "no-trailing-whitespace": false,
    "semicolon": false
  }
}
